@model IEnumerable<Banhang.Models.DanhMuc>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Mục Sản Phẩm</h2>

<p>
    <a asp-controller="DanhMucs" asp-action="Create" class="btn btn-primary fa fa-pencil">&nbsp Thêm mới</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Tên Danh Mục
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tendm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary fa fa-pencil"></a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info fa fa-eye"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger fa fa-trash" Onclick = "return confirm('Bạn có muốn xoá không?')"></a>
            </td>
        </tr>
}
    </tbody>
</table>
