@model Banhang.Models.DanhMuc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h4>Thêm Danh Mục</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tendm" class="control-label">Tên Danh Mục</label>
                <input asp-for="Tendm" class="form-control" />
                <span asp-validation-for="Tendm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trangthai" class="control-label">
                    Trạng Thái
                </label>
                <input asp-for="Trangthai" class="form-control" />
                <span asp-validation-for="Trangthai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary fas fa-save" />
                <a asp-action="Index" class="btn btn-danger">Quay Lại</a>
            </div>
        </form>
    </div>
</div>


