@model Banhang.Models.DanhMuc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết danh mục</h2>

<div>
    <h4>Quản lý danh mục</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên danh mục
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tendm)
        </dd>
        <dt>
            Trạng thái
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Trangthai)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id" >Sửa</a> |
    <a class="btn btn-danger" asp-action="Index">Quay Lại</a>
</div>
